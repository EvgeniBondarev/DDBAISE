@using PostСity.HtmlHelpers
@using System.Web
﻿
@{
    ViewData["Title"] = "Employee";
}

@model IEnumerable<Employee> 
@{
    var columnDefinitions = new List<ColumnDefinition<Employee>>
    {
        new ColumnDefinition<Employee> { Header = "ID", PropertyName = "Id" },
        new ColumnDefinition<Employee> { Header = "Name", PropertyName = "Name" },
        new ColumnDefinition<Employee> { Header = "Middlename", PropertyName = "Middlename" },
        new ColumnDefinition<Employee> { Header = "Surname", PropertyName = "Surname" },
        new ColumnDefinition<Employee> { Header = "Position", ValueExpression = e => e.Position.Position },
        new ColumnDefinition<Employee> { Header = "Office", ValueExpression = e => e.Office.StreetName }
    };
}


@Html.DisplayTable(Model, columnDefinitions)


