@model IEnumerable<PostCity.Models.RecipientAddress>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                <b>@Html.DisplayNameFor(model => model.Street)</b>
            </th>
            <th>
                <b>@Html.DisplayNameFor(model => model.House)</b>
            </th>
            <th>
                <b>@Html.DisplayNameFor(model => model.Apartment)</b>
            </th>
            <th><b>Actions</b></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Street)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.House)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Apartment)
                    </td>
                    <div class="btn-group">

                                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                            <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                     </div>
                </tr>
        }
    </tbody>
</table>
