@using Laba4.ViewModels
@using Laba4.ViewModels.Filters

@model SubscriptionIndexViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var FilterModel = ViewData["FilterModel"] as SubscriptionFilterModel;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="post">
    <div>
        <label>Продолжительность: </label>
        <input asp-for="@Model.SubscriptionFilter.Duration" name="Duration"/><br />

        <label>Год начала подписки: </label>
        <input asp-for="@Model.SubscriptionFilter.StartDate" name="StartDate"/><br />

        <label>Название публикации: </label>
        <input asp-for="@Model.SubscriptionFilter.PublicationName" name="PublicationName"/><br />

        <label>Цена публикации: </label>
        <input asp-for="@Model.SubscriptionFilter.PublicationPrice" name="PublicationPrice"/><br />

        <label>Тип публикации: </label>
        <input asp-for="@Model.SubscriptionFilter.PublicationType" name="PublicationType"/><br />

        <input type="submit" value="Фильтр" />
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"  asp-route-sortOrder="@ViewBag.DurationSort">
                Duration
                </a>
            </th>
            <th>
                SubscriptionStartDate
            </th>
            <th>
                <a asp-action="Index"  asp-route-sortOrder="@ViewBag.NameSort">
                Publication Name
                </a>
            </th>
            <th>
                <a asp-action="Index"  asp-route-sortOrder="@ViewBag.PriceSort">
                Publication Price
                </a>
            </th>
            <th>
                <a asp-action="Index"  asp-route-sortOrder="@ViewBag.TypeSort">
                Publication Type
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Subscription) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Duration) мес.
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriptionStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publication.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Publication.Price) руб.
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Publication.Type.Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<p>
    @if (Model.PageViewModel.HasPreviousPage)
    {
                        <a asp-action="Index"
               asp-route-page="@(Model.PageViewModel.PageNumber - 1)" class="glyphicon glyphicon-chevron-left">
                            Назад
                        </a>
    }

    @if (Model.PageViewModel.HasNextPage)
    {
                        <a asp-action="Index"
               asp-route-page="@(Model.PageViewModel.PageNumber + 1)" class="glyphicon glyphicon-chevron-right">
                            Вперед
                        </a>
    }
</p>
